<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.github.ymatoi.note.ui.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_editFragment"
            app:destination="@id/editFragment" />
        <action
            android:id="@+id/action_mainFragment_to_datePickerDialogFragment"
            app:destination="@id/datePickerDialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="com.github.ymatoi.note.ui.EditFragment"
        android:label="EditFragment" >
        <argument
            android:name="note"
            app:argType="com.github.ymatoi.note.database.Note"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/datePickerDialogFragment"
        android:name="com.github.ymatoi.note.ui.DatePickerDialogFragment"
        android:label="DatePickerDialogFragment" >
        <argument
            android:name="dates"
            app:argType="string[]" />
    </fragment>
</navigation>